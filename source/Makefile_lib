# Project: packLZH static library
# Makefile created by Matthias Stirner 01/30/2012
# Working with GCC 4.6.0

CC      = gcc
CPP     = g++
AR      = ar
RM      = del
CFLAGS  = -I. -DBUILD_LIB -O2 -Wall -pedantic -fsched-spec-load -fomit-frame-pointer
LDFLAGS = -fvisibility=hidden -static-libgcc -static-libstdc++
DEPS    = vliprecalc.h vlicoder.h huffcoder.h lzcoder.h lzhcoder.h bitops.h plzhtbl.h Makefile
OBJ     = vlicoder.o huffcoder.o lzcoder.o lzhcoder.o bitops.o packlzh.o
BIN     = packLZHlib.a

%.o: %.cpp $(DEPS)
	$(CPP) -c -o $@ $< $(CFLAGS)

$(BIN): $(OBJ)
	ar r $(BIN) $(OBJ)
	ranlib $(BIN)

clean:
	$(RM) *.o
